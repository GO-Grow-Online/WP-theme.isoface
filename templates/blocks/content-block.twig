{% set st = block.st != "" ? block.st : empty %}
{% set t = block.t != "" ? block.t : empty %}
{% set ctn = block.ctn != "" ? block.ctn : empty %}

{% if p.type == 'produits' %}
    {% set st = st|replace({'[produit]': p.title}) %}
    {% set t = t|replace({'[produit]': p.title}) %}
    {% set ctn = ctn|replace({'[produit]': p.title}) %}
{% elseif p.type == 'projet' %}
    {% set st = st|replace({'[projet]': p.title}) %}
    {% set t = t|replace({'[projet]': p.title}) %}
    {% set ctn = ctn|replace({'[projet]': p.title}) %}
{% endif %}

<h2>
    {% if st is not empty %}<span>{{ st }}</span>{% endif %}
    {% if t is not empty %}{{ t }}{% endif %}
</h2>


<div class="wysiwyg">{{ ctn }}</div>

